pipeline {
    agent {
        docker {
            image 'maven:3.6.3' // Usando uma imagem Docker especÃ­fica com Maven instalado
            args '-v /var/run/docker.sock:/var/run/docker.sock' // Monta o socket do Docker para permitir builds de Docker dentro do container
        }
    }
    
    stages {
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Run Docker') {
            steps {
                sh 'docker build -t myapp .'
                sh 'docker run -d -p 8080:8080 myapp'
            }
        }
    }
}
