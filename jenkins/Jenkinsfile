pipeline {
    agent any

    stages {
        stage('Run ses-app using Docker Compose') {
            steps {
                script {
                    // Navega até o diretório ~/teste-saude onde o docker-compose.yml está localizado
                    sh 'cd ~/teste-saude'

                    // Executa o Docker Compose para subir o container em segundo plano
                    sh 'docker-compose up -d'
                }
            }
        }
    }

    post {
        always {
            // Exibe os containers em execução para verificar se o ses-app subiu corretamente
            sh 'docker ps'
        }
    }
}
