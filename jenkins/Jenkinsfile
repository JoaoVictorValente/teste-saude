pipeline {
    agent any

    stages {
        stage('Pull Nginx Image') {
            steps {
                script {
                    // Puxa a imagem do Nginx
                    sh 'docker pull nginx:latest'
                }
            }
        }

        stage('Run Nginx Container') {
            steps {
                script {
                    // Para garantir que o container não esteja rodando, removemos qualquer instância anterior
                    sh 'docker stop nginx-server || true'
                    sh 'docker rm nginx-server || true'
                    
                    // Inicia o novo container do Nginx em primeiro plano
                    sh 'docker run -d --name nginx-server -p 8181:80 nginx:latest'
                }
            }
        }
    }

    post {
        always {
            // Exibe os logs do container após a execução
            sh 'docker logs nginx-server || true'
        }
    }
}
